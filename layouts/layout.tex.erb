% -*- coding: utf-8 -*-
\documentclass[dvipdfmx,%
<%= documentclassoption %>
]{<%= documentclass %>}
\usepackage{<%= documentclass %>-local}

\bookcoverimage{<%= values["coverimage"] %>}
\booktitle{<%= values["booktitle"] %>}
\bookauthors{<%= authors %>}
\bookdate{<%= values["date"] %>}
\bookprt{<%= values["prt"] %>}

\begin{document}
\frontmatter
<% if values["titlepage"] %><% if custom_titlepage %><%= custom_titlepage %><% else %><% if values["coverimage"] %>
\makecoverimage<% end %>
% \makebooktitle
<% end %><% end %>
<% if values["pre_str"] %><%= values["pre_str"] %><% end %>
<% if values["toc"] %>
\setcounter{tocdepth}{<%= values["toclevel"] %>}
\begin{TOC}\tableofcontents\end{TOC}
<% end %>

\mainmatter
<%= values["chap_str"] %>
<% if values["appendix_str"] %>
\appendix
<%= values["appendix_str"] %>
<% end %>

<% if values["post_str"] %>
\backmatter
<%= values["post_str"] %>
<% end %>
\end{document}
